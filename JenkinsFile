pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                 withMaven(maven : 'apache-maven-3.8.4') {
                    sh 'mvn - f ("C://Users//Efe//Downloads//AccountingProject//AccountingProject//pom.xml") clean'
                     sh 'mvn - f ("C://Users//Efe//Downloads//AccountingProject//AccountingProject//pom.xml") compile'
                    //sh 'mvn clean'
                    //sh 'mvn compile'
                }
            }
        }

        stage('Test') {
            steps {
                 withMaven(maven : 'apache-maven-3.8.4') {
                     sh 'mvn - f ("C://Users//Efe//Downloads//AccountingProject//AccountingProject//pom.xml") test'
                 }
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: "target/surefire-reports/*.html"
                }
            }
        }

         stage ('Deploy') {
            steps {
                withMaven(maven : 'apache-maven-3.8.4') {
                     sh 'mvn - f ("C://Users//Efe//Downloads//AccountingProject//AccountingProject//pom.xml") deploy'
                }
            }
         }
    }
}